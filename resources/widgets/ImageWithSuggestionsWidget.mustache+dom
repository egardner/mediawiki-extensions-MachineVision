<div class="wbmad-image-with-suggestions__container {{spinnerClass}}">
	<div class="wbmad-image-with-suggestions__image">
		<div class="wbmad-image-with-suggestions__image-wrapper">
			<a href="{{filePageUrl}}" target="_blank">
				<img
					class="wbmad-lazy"
					data-src="{{thumburl}}"
					alt="{{imageTagTitle}}"
					title="{{imageTagTitle}}"
					{{#imageLoaded}}
						src="{{thumburl}}"
					{{/imageLoaded}}
				>
			</a>
		</div>
	</div>

	<div class="wbmad-image-with-suggestions__content">
		{{{titleLabel}}}
		{{#hasCategories}}
			<div class="wbmad-category-list">
				<span class="wbmad-category-list__label">{{categoriesLabel}}</span>
				{{#categories}}
					<span class="wbmad-category-list__item">{{title}}</span>
				{{/categories}}
			</div>
		{{/hasCategories}}

		{{#suggestions}}
			{{{.}}}
		{{/suggestions}}

		<div class="wbmad-action-buttons">
			{{{publishButton}}}
			{{{skipButton}}}
		</div>
	</div>
</div>

{{#showSpinner}}
    <div class="wbmad-spinner">
        <div class="wbmad-spinner-bounce"></div>
    </div>
{{/showSpinner}}
